package com.airport.persistence;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.airport.domain.User;

@Repository
public interface MemberRepo extends JpaRepository<User, String> {

    @Query("SELECT COUNT(m) > 0 FROM Member m WHERE m.username = ?1")
    boolean existsByUsername(String username);

    @Query("SELECT COUNT(m) > 0 FROM Member m WHERE m.nickname = ?1")
    boolean existsByNickname(String nickname);
}
